<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }} flex h-full flex-col bg-zinc-50 xdark:bg-black font-sans">
    <div class="fixed inset-0 flex justify-center sm:px-8">
      <div class="flex w-full px-6 md:max-w-3xl md:mx-auto lg:max-w-4xl">
        <div class="w-full bg-white ring-1 ring-zinc-100 xdark:bg-zinc-900 xdark:ring-zinc-300/20 py-12 lg:pt-16 lg:pb-28"></div>
      </div>
    </div>
    {%# render "navbar", metadata: site.metadata, resource: resource %}

    <div class="sm:px-8 mt-16 lg:mt-32">
      <div class="mx-auto w-full px-6 md:max-w-3xl md:mx-auto lg:max-w-4xl">
        <div class="relative px-6">
          {{ content }}
        </div>
      </div>
    </div>

    {% render "footer", metadata: site.metadata %}
  </body>
</html>