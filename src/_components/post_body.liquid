<div class="flex flex-col">
  {% if main %}
    <header class="mb-6 lg:mb-12 space-y-2">
      <h1 class="font-display text-center text-6xl font-extralight text-neutral-950">{{ post.data.title }}</h1>

      <div class="text-sm text-center text-neutral-950">
        Naomi Bennett &bull;
        {{ post.data.date | date: '%B %m, %Y' }}
      </div>
    </header>
  {% else %}
    <header class="mb-6 lg:mb-12 space-y-2">
      <h2 class="font-display text-center text-6xl font-extralight text-neutral-950">
        <a href="{{ post.relative_url }}" class="text-inherit no-underline">{{ post.data.title }}</a>
      </h2>
      <div class="text-sm text-center text-neutral-950">
        Naomi Bennett &bull;
        {{ post.data.date | date: '%B %m, %Y' }}
      </div>
    </header>
  {% endif %}

  <div class="[&>*]:mx-auto [&>*]:max-w-3xl [&>:first-child]:!mt-0 [&>:last-child]:!mb-0">
    <div class="mt-4 prose prose-lg">
      {{ post.content }}
    </div>
  </div>
</div>