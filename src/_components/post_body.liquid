<div class="flex flex-col">
  {% if main %}
    <header class="mx-auto flex max-w-5xl flex-col text-center mb-18 lg:mb-24">
      <h1 class="mt-6 font-display text-5xl font-medium tracking-tight text-neutral-950 [text-wrap:balance] sm:text-6xl">{{ post.data.title }}</h1>
      <div class="order-first text-sm text-neutral-950">{{ post.data.date | date: '%B %m, %Y' }}</div>
      {% comment %}<div class="mt-6 text-sm font-semibold text-neutral-950">{{ post.data.author }}</div>{% endcomment %}
    </header>
  {% else %}
    <header class="mb-8">
      <h2 class="font-display text-2xl font-semibold text-neutral-950">
        <a href="{{ post.relative_url }}" class="text-inherit no-underline">{{ post.data.title }}</a>
      </h2>
      <div class="text-sm text-neutral-950">{{ post.data.date | date: '%B %m, %Y' }}</div>
    </header>
  {% endif %}

  <div class="[&>*]:mx-auto [&>*]:max-w-3xl [&>:first-child]:!mt-0 [&>:last-child]:!mb-0">
    <div class="mt-4 prose prose-lg">
      {{ post.content }}
    </div>
  </div>
</div>